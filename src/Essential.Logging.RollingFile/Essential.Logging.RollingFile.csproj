<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Product>Essential.Logging</Product>
    <Authors>sgryphon</Authors>
    <Copyright>Copyright Â© 2020 Gryphon Technology Pty Ltd</Copyright>
    <Version>0.0.1</Version>
    <LangVersion>latest</LangVersion>
    <!--    <Nullable>enable</Nullable>-->
  </PropertyGroup>

  <PropertyGroup>
    <Description>
      Rolling file log provider for Microsoft.Extensions.Logging. Writes to a text file, rolling to a new file based on a filename template (usually including the date).

      Other Essential.Logging packages extend the .NET Microsoft.Extensions.Logging with additional log providers, including a rolling file.

      See the project site on GitHub for examples and documentation.
    </Description>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>LGPL-3.0-or-later</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/sgryphon/essential-logging</PackageProjectUrl>
    <PackageIcon>Essential-Diagnostics-64.png</PackageIcon>
    <PackageTags>Logging;Tracing;Diagnostics;Log;Trace</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\docs\images\Essential-Diagnostics-64.png" Pack="true" PackagePath="\" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="GitVersionTask" Version="5.1.3" />
    <PackageReference Include="Essential.Logging.Core" Version="0.1.18" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="3.1.2" />
  </ItemGroup>

</Project>
